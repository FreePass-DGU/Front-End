<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:layout_margin="30dp"
            android:id="@+id/img1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/check"/>

        <ImageView
            android:id="@+id/img2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/user"
            android:layout_marginStart="323.19dp"
            android:layout_marginTop="20dp" />

        <TextView
            android:text="프리패스"
            android:textSize="30sp"
            android:id="@+id/textfreepass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="155.72dp"
            android:layout_marginTop="25.92dp"
            android:textColor="#707070" />

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="83dp"
            android:background="#707070" />

        <TextView
            android:text="촛불 1978"
            android:textSize="30sp"
            android:id="@+id/restaurant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="155dp"
            android:layout_marginTop="100dp"
            android:textColor="#707070" />

        <TextView
            android:text="             위치 : 서울 중구 소파로 95\n
            지하철 : 명동역 3번 출구\n
            운영 시간 : 매일 17:00 - 22:00\n
            '분위기 있는 양식 레스토랑'"
            android:textSize="20sp"
            android:id="@+id/detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="150dp"
            android:textColor="#707070" />

        <ImageView
            android:id="@+id/mapimage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/detail"
            android:src="@drawable/food" />

    </RelativeLayout>

</ScrollView>